<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/itemFileFileIcon"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:layout_width="32dp"
            android:layout_height="32dp"/>

    <ImageView
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:src="@drawable/ic_file_more"
            android:id="@+id/itemFileFileMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:layout_toStartOf="@id/itemFileFileMore"
            android:textColor="#000000"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:text="title"
            android:layout_toEndOf="@id/itemFileFileIcon"
            android:id="@+id/itemFileFileTitle"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/itemFileFileContentExtra"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:layout_below="@id/itemFileFileTitle"
            android:layout_toStartOf="@id/itemFileFileMore"
            tools:text="26Kb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@id/itemFileFileTitle"
            tools:text="content"
            android:layout_toEndOf="@id/itemFileFileIcon"
            android:layout_toStartOf="@id/itemFileFileContentExtra"
            android:id="@+id/itemFileFileContent"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>