<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="128dp">

    <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/notificationMusicBigImage"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="128dp"
            android:layout_height="128dp"/>

    <LinearLayout
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            <TextView
                    android:id="@+id/notificationMusicBigTitle"
                    android:maxLines="2"
                    tools:text="スーパーヒーロ"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/notificationMusicBigArtist"
                    android:layout_marginTop="6dp"
                    tools:text="私立惠比寿中学"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/notificationMusicBigLike"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple_theme"
                    android:padding="12dp"
                    android:src="@drawable/ic_music_unlike"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
            <ImageView
                    android:id="@+id/notificationMusicBigPrevious"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple_theme"
                    android:padding="6dp"
                    android:src="@drawable/ic_music_player_previous"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
            <ImageView
                    android:id="@+id/notificationMusicBigPlayPause"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple_theme"
                    android:padding="6dp"
                    android:src="@drawable/ic_music_player_pause"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
            <ImageView
                    android:id="@+id/notificationMusicBigNext"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple_theme"
                    android:padding="6dp"
                    android:src="@drawable/ic_music_player_next"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
            <ImageView
                    android:id="@+id/notificationMusicBigLoop"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple_theme"
                    android:padding="12dp"
                    android:src="@drawable/ic_music_player_random"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>