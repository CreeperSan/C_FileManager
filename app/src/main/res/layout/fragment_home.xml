<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
                android:id="@+id/fragmentHomeAppBarLayout"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
            <android.support.v7.widget.Toolbar
                    tools:title="主页"
                    android:theme="@style/WhiteToolbar"
                    app:titleTextColor="@color/white"
                    android:id="@+id/fragmentHomeToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"/>
        </android.support.design.widget.AppBarLayout>

        <TextView
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="@string/homeFragmentOperationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:id="@+id/homeFragmentOperationList"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="@string/homeFragmentStorageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:id="@+id/homeFragmentStorageList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


    </LinearLayout>

</ScrollView>