<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
            android:layout_margin="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/icon_foreground"
            android:id="@+id/dialogAppViewerIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

    <TextView
            app:layout_constraintStart_toEndOf="@id/dialogAppViewerIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/dialogAppViewerIcon"
            app:layout_constraintTop_toTopOf="@id/dialogAppViewerIcon"
            android:textColor="@color/black"
            tools:text="sadasasdawdasdwad"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:lines="1"
            android:id="@+id/dialogAppViewerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <View
            android:id="@+id/dialogAppViewerDiver"
            android:layout_marginTop="6dp"
            android:background="@color/blackAlpha50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialogAppViewerIcon"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>

    <TextView
            android:layout_marginTop="8dp"
            android:layout_marginStart="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialogAppViewerDiver"
            android:textColor="@color/black"
            tools:text="版本 : 0.36"
            android:id="@+id/dialogAppViewerVersion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginTop="8dp"
            android:layout_marginStart="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialogAppViewerVersion"
            android:textColor="@color/black"
            tools:text="包名 : com.creepersan.c_file_manager"
            android:id="@+id/dialogAppViewerPackageName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginTop="8dp"
            android:layout_marginStart="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialogAppViewerPackageName"
            android:textColor="@color/black"
            tools:text="大小 : 60.23M"
            android:id="@+id/dialogAppViewerSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginTop="8dp"
            android:layout_marginStart="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialogAppViewerSize"
            android:textColor="@color/black"
            tools:text="安装时间 : 2018/02/06 12:03:26"
            android:id="@+id/dialogAppViewerInstallTile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>