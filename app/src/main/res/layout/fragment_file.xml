<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/fragmentFilePathLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_direction_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragmentFilePathRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/fragmentFilePathLayout"
        android:id="@+id/fragmentFileFileRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_below="@id/fragmentFilePathLayout"
        android:gravity="center"
        android:id="@+id/fragmentFileLoadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/fragmentFilePathProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fragmentFilePathLoadingText"
            tools:text="loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <FrameLayout
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:id="@+id/fragmentFileMenuBackground"
        android:background="@drawable/bg_gradient_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <android.support.design.widget.FloatingActionButton
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/fragmentFileFloatingActionButton"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:tint="@color/white"
        android:src="@drawable/ic_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.design.widget.FloatingActionButton
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:tint="@color/white"
        android:src="@drawable/ic_file"
        android:layout_marginBottom="@dimen/floatingActionButtonMargin"
        android:layout_alignEnd="@id/fragmentFileFloatingActionButton"
        android:layout_above="@id/fragmentFileFloatingActionButton"
        android:id="@+id/fragmentFileFloatingActionButtonFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:gravity="center"
        android:id="@+id/fragmentFileFloatingActionButtonFileLabel"
        android:elevation="@dimen/floatingActionButtonLabelElevation"
        android:paddingTop="@dimen/floatingActionButtonLabelPaddingVertical"
        android:paddingBottom="@dimen/floatingActionButtonLabelPaddingVertical"
        android:paddingStart="@dimen/floatingActionButtonLabelPaddingHorizontal"
        android:paddingEnd="@dimen/floatingActionButtonLabelPaddingHorizontal"
        android:layout_marginTop="@dimen/floatingActionButtonLabelMarginVertical"
        android:layout_marginBottom="@dimen/floatingActionButtonLabelMarginVertical"
        android:layout_marginStart="@dimen/floatingActionButtonLabelMarginHorizontal"
        android:layout_marginEnd="@dimen/floatingActionButtonLabelMarginHorizontal"
        android:background="@drawable/shape_floating_action_button_label"
        android:layout_toStartOf="@id/fragmentFileFloatingActionButtonFile"
        android:layout_alignTop="@id/fragmentFileFloatingActionButtonFile"
        android:layout_alignBottom="@id/fragmentFileFloatingActionButtonFile"
        android:text="@string/newFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.design.widget.FloatingActionButton
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:tint="@color/white"
        android:src="@drawable/ic_folder"
        android:layout_marginBottom="@dimen/floatingActionButtonMargin"
        android:layout_alignEnd="@id/fragmentFileFloatingActionButtonFile"
        android:layout_above="@id/fragmentFileFloatingActionButtonFile"
        android:id="@+id/fragmentFileFloatingActionButtonFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:gravity="center"
        android:id="@+id/fragmentFileFloatingActionButtonFolderLabel"
        android:elevation="@dimen/floatingActionButtonLabelElevation"
        android:paddingTop="@dimen/floatingActionButtonLabelPaddingVertical"
        android:paddingBottom="@dimen/floatingActionButtonLabelPaddingVertical"
        android:paddingStart="@dimen/floatingActionButtonLabelPaddingHorizontal"
        android:paddingEnd="@dimen/floatingActionButtonLabelPaddingHorizontal"
        android:layout_marginTop="@dimen/floatingActionButtonLabelMarginVertical"
        android:layout_marginBottom="@dimen/floatingActionButtonLabelMarginVertical"
        android:layout_marginStart="@dimen/floatingActionButtonLabelMarginHorizontal"
        android:layout_marginEnd="@dimen/floatingActionButtonLabelMarginHorizontal"
        android:background="@drawable/shape_floating_action_button_label"
        android:layout_toStartOf="@id/fragmentFileFloatingActionButtonFolder"
        android:layout_alignTop="@id/fragmentFileFloatingActionButtonFolder"
        android:layout_alignBottom="@id/fragmentFileFloatingActionButtonFolder"
        android:text="@string/newFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>