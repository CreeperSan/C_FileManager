<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
            android:id="@+id/dialogFileFragmentNewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:visibility="gone"
            android:layout_gravity="center"
            android:textColor="@color/red"
            android:textSize="12sp"
            tools:text="asdasdasdasdasd"
            android:id="@+id/dialogFileFragmentHintText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <RadioGroup
            android:id="@+id/dialogFileFragmentRadioGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioButton
                android:id="@+id/dialogFileFragmentRadioButtonFile"
                android:checked="true"
                android:text="@string/dialogFileFragmentNewFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <RadioButton
                android:id="@+id/dialogFileFragmentRadioButtonFolder"
                android:text="@string/dialogFileFragmentNewFolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RadioGroup>

</LinearLayout>