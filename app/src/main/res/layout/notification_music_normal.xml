<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="64dp"
              xmlns:tools="http://schemas.android.com/tools">

    <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/notificationMusicNormalImage"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="64dp"
            android:layout_height="64dp"/>

    <LinearLayout
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="64dp">

        <TextView
                android:id="@+id/notificationMusicNormalTitle"
                android:textSize="14sp"
                android:maxLines="2"
                android:textColor="@color/black"
                tools:text="スーパーヒーロ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/notificationMusicNormalArtist"
                android:textSize="12sp"
                tools:text="私立惠比寿中学"
                android:maxLines="1"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
            android:background="@drawable/ripple_theme"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/notificationMusicNormalPlayPause"
            android:padding="6dp"
            android:src="@drawable/ic_music_player_pause"
            android:layout_width="46dp"
            android:layout_height="64dp"/>

    <ImageView
            android:background="@drawable/ripple_theme"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/notificationMusicNormalNext"
            android:padding="6dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_music_player_next"
            android:layout_width="46dp"
            android:layout_height="64dp"/>

</LinearLayout>